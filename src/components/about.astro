        .responsive-padding {
            padding-left: 1rem;
            padding-right: 1rem;
        }
        .responsive-text {
            font-size: 0.875rem;
        }
    }

    @media (min-width: 641px) and (max-width: 1024px) {
        .responsive-padding {
            padding-left: 2rem;
            padding-right: 2rem;
        }
    }

