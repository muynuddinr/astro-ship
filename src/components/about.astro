    .group {
        transform: translateZ(0);
        backface-visibility: hidden;
    }

    /* Improve gradient overlay */
    .bg-gradient-to-t {
        background: linear-gradient(
            to top,
            rgba(0, 0, 0, 0.9) 0%,
            rgba(0, 0, 0, 0.7) 30%,
            rgba(0, 0, 0, 0.3) 60%,
            rgba(0, 0, 0, 0) 100%
        );
    }

    /* Prevent layout shifts */
    .grid {
        grid-auto-rows: 1fr;
    }

    /* Replace this:
    .relative.h-0.pb-[66.67%] {
        background-color: #f3f4f6;
    }
    */

    /* With this: */
    .relative {
        aspect-ratio: 3/2;
        background-color: #f3f4f6;
    }

    @media (min-width: 768px) {
