        .image-container {
            padding-top: 66.67%; /* 2:3 aspect ratio for tablet */
        }
    }

    @media (min-width: 1025px) {
        .image-container {
            padding-top: 56.25%; /* 16:9 aspect ratio for desktop */
        }
    }

    /* Smooth image loading */
    img {
        opacity: 0;
        animation: fadeIn 0.3s ease-in-out forwards;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    /* Prevent text overflow */
