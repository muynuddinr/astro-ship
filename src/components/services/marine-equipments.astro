        image: "/public/services/marine-equipments/2.jpg",
        features: [
            "Air Compressors",
            "Pneumatic Wrenches",
            "Air Motors",
            "Pressure Regulators",
            "Air Treatment Units",
        ],
        certification: "ISO 9001:2015",
    },
    {
