];

const specialties = [
    {
        title: "Consistency",
        description: "Delivering reliable service across decades",
        icon: "‚≠ê",
        color: "from-blue-600 to-blue-800"
    },
    {
        title: "Cost Efficiency",
        description: "Providing competitive solutions",
        icon: "üí∞",
        color: "from-emerald-600 to-teal-800"
    },
    {
        title: "Competency",
        description: "Expert solutions from bridge to propeller",
        icon: "üéØ",
        color: "from-indigo-600 to-purple-800"
    }
