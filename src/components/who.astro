const services = [
    {
        title: "Technical Supply Chain",
        description: "Complete fabrication works, interior carpentry, life raft servicing, and spares supplies",
        image: "https://images.unsplash.com/photo-1471958680802-1345a694ba6d?w=800&auto=format&fit=crop&q=60"
    },
    {
        title: "Supply Chain",
        description: "BRC standard services for all vessel types including passenger, bulk carrier, containers, and tankers",
        image: "https://images.unsplash.com/photo-1494412519320-aa613dfb7738?w=800&auto=format&fit=crop&q=60"
    },
    {
