---
// Modern contact page with neumorphic design
---

<section class="min-h-screen bg-gray-100 py-20 px-4">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-20">
            <span class="inline-block px-6 py-2 rounded-full text-gray-700 text-sm font-medium mb-4 shadow-soft">
                Let's Connect
            </span>
            <h1 class="text-5xl md:text-7xl font-bold text-gray-800 mb-6">
                Get in Touch
                <span class="text-blue-600">Today</span>
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Have a project in mind? We're here to help turn your ideas into reality.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
            <!-- Contact Form -->
            <div class="bg-gray-100 rounded-3xl p-8 shadow-soft">
                <form id="contactForm" class="space-y-6">
                    <div class="grid sm:grid-cols-2 gap-6">
                        <div class="form-group">
                            <label class="block text-gray-700 font-medium mb-2" for="name">
                                Name <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input 
                                    type="text" 
                                    id="name" 
                                    name="name"
                                    required
                                    minlength="2"
                                    class="w-full px-5 py-4 bg-gray-100 rounded-xl shadow-inner-soft focus:outline-none focus:shadow-focus-soft transition-all"
                                    placeholder="Your name"
                                >
                                <p class="text-red-500 text-sm mt-1 hidden" id="nameError"></p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="block text-gray-700 font-medium mb-2" for="email">
                                Email <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email"
                                    required
                                    class="w-full px-5 py-4 bg-gray-100 rounded-xl shadow-inner-soft focus:outline-none focus:shadow-focus-soft transition-all"
                                    placeholder="you@example.com"
                                >
                                <p class="text-red-500 text-sm mt-1 hidden" id="emailError"></p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="block text-gray-700 font-medium mb-2" for="subject">
                            Subject <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            id="subject" 
                            name="subject"
                            required
                            class="w-full px-5 py-4 bg-gray-100 rounded-xl shadow-inner-soft focus:outline-none focus:shadow-focus-soft transition-all"
                            placeholder="What's this about?"
                        >
                        <p class="text-red-500 text-sm mt-1 hidden" id="subjectError"></p>
                    </div>

                    <div class="form-group">
                        <label class="block text-gray-700 font-medium mb-2" for="message">
                            Message <span class="text-red-500">*</span>
                        </label>
                        <textarea 
                            id="message" 
                            name="message"
                            required
                            rows="6" 
                            class="w-full px-5 py-4 bg-gray-100 rounded-xl shadow-inner-soft focus:outline-none focus:shadow-focus-soft transition-all resize-none"
                            placeholder="Tell us about your project..."
                        ></textarea>
                        <p class="text-red-500 text-sm mt-1 hidden" id="messageError"></p>
                    </div>

                    <button 
                        type="submit" 
                        class="w-full py-4 px-6 bg-gray-100 text-blue-600 font-medium rounded-xl shadow-soft hover:shadow-hover-soft active:shadow-pressed-soft transition-all duration-200"
                    >
                        Send Message
                    </button>
                </form>
            </div>

            <!-- Contact Info -->
            <div class="space-y-8">
                <div class="bg-gray-100 rounded-3xl p-8 shadow-soft">
                    <h2 class="text-2xl font-bold text-gray-800 mb-8">Contact Information</h2>
                    <div class="space-y-8">
                        <a href="#" class="block group">
                            <div class="flex items-center p-6 rounded-2xl bg-gray-100 shadow-inner-soft group-hover:shadow-hover-soft transition-all duration-300">
                                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gray-100 shadow-soft text-blue-600">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h3 class="text-lg font-semibold text-gray-800">Visit Us</h3>
                                    <p class="text-gray-600">123 Innovation Street, Tech City</p>
                                </div>
                            </div>
                        </a>

                        <a href="tel:+1234567890" class="block group">
                            <div class="flex items-center p-6 rounded-2xl bg-gray-100 shadow-inner-soft group-hover:shadow-hover-soft transition-all duration-300">
                                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gray-100 shadow-soft text-blue-600">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h3 class="text-lg font-semibold text-gray-800">Call Us</h3>
                                    <p class="text-gray-600">+1 (234) 567-8900</p>
                                </div>
                            </div>
                        </a>

                        <a href="mailto:hello@example.com" class="block group">
                            <div class="flex items-center p-6 rounded-2xl bg-gray-100 shadow-inner-soft group-hover:shadow-hover-soft transition-all duration-300">
                                <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-gray-100 shadow-soft text-blue-600">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <div class="ml-6">
                                    <h3 class="text-lg font-semibold text-gray-800">Email Us</h3>
                                    <p class="text-gray-600">hello@example.com</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Map -->
                <div class="bg-gray-100 rounded-3xl overflow-hidden shadow-soft">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31096.735708045093!2d77.53786027734147!3d13.029815397620604!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae17dfb8390277%3A0x2f5e7605b180ac71!2sMathikere%2C%20Bengaluru%2C%20Karnataka!5e0!3m2!1sen!2sin!4v1736094065556!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .shadow-soft {
        box-shadow: 6px 6px 12px #d1d1d1,
                   -6px -6px 12px #ffffff;
    }

    .shadow-inner-soft {
        box-shadow: inset 4px 4px 8px #d1d1d1,
                   inset -4px -4px 8px #ffffff;
    }

    .shadow-hover-soft {
        box-shadow: 8px 8px 16px #d1d1d1,
                   -8px -8px 16px #ffffff;
    }

    .shadow-pressed-soft {
        box-shadow: inset 2px 2px 5px #d1d1d1,
                   inset -2px -2px 5px #ffffff;
    }

    .shadow-focus-soft {
        box-shadow: inset 4px 4px 8px #d1d1d1,
                   inset -4px -4px 8px #ffffff,
                   0 0 0 3px rgba(59, 130, 246, 0.1);
    }
</style>
