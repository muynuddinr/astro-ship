                <a href="/about" class="mobile-link">About</a>
                <a href="/services" class="mobile-link">Services</a>
                <a href="/contact" class="mobile-link">Contact</a>
                <div class="grid gap-2 pt-4">
                    <a href="/quote" class="mobile-btn-primary">
                        Get Started
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<style>
    @import url("https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,400&display=swap");

    .nav-link {
        @apply flex items-center px-4 py-2 text-black hover:text-[#344CB7] font-medium relative transition-all duration-300 hover:scale-105;
    }

    .nav-indicator {
        @apply absolute -bottom-px left-0 right-0 h-0.5 bg-[#344CB7] scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left;
    }

    .menu-item {
        @apply flex items-center justify-between p-3 rounded-xl hover:bg-gray-50 transition-colors duration-200;
    }

    .btn-primary {
        @apply inline-flex items-center px-6 py-3 rounded-xl text-sm font-medium text-white 
        bg-[#344CB7]
        hover:bg-[#2a3d92]
        transition-all duration-300 shadow-lg shadow-indigo-600/20 
        hover:shadow-xl hover:shadow-indigo-600/30 
        hover:-translate-y-0.5 hover:scale-105 
        border border-white/20 backdrop-blur-sm;
    }

    .btn-secondary {
        @apply inline-flex items-center px-5 py-2.5 rounded-xl text-sm font-medium 
        text-gray-700 bg-white/80 hover:bg-white 
        transition-all duration-300 hover:shadow-lg 
        hover:-translate-y-0.5 border border-gray-200/50 
        backdrop-blur-sm hover:border-violet-200;
    }

    .mobile-link {
        @apply block px-3 py-2.5 rounded-xl text-base font-medium text-black hover:text-[#344CB7] hover:bg-[#344CB7]/10 transition-colors duration-200;
    }

    .mobile-btn-primary {
        @apply block w-full text-center px-4 py-3 rounded-xl text-sm font-medium text-white 
        bg-[#344CB7]
        hover:bg-[#2a3d92]
        transition-all duration-200 
        shadow-md shadow-indigo-600/10 
        hover:shadow-lg hover:shadow-indigo-600/20;
    }

    .mobile-btn-secondary {
        @apply block w-full text-center px-4 py-3 rounded-xl text-sm font-medium 
        text-gray-700 bg-gray-50 hover:bg-gray-100 
        transition-all duration-200 
        border border-gray-200/50;
    }

    @keyframes wave {
        0% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-7%) rotate(3deg);
        }
        100% {
            transform: translateY(0) rotate(0deg);
        }
    }

    @keyframes wave-delayed {
        0% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-10%) rotate(-3deg);
        }
        100% {
            transform: translateY(0) rotate(0deg);
        }
    }

    @keyframes float {
        0% {
            transform: translateY(0) translateX(0);
        }
        50% {
            transform: translateY(-5px) translateX(5px);
        }
        100% {
            transform: translateY(0) translateX(0);
        }
    }

    .animate-wave {
        animation: wave 12s ease-in-out infinite;
    }

    .animate-wave-delayed {
        animation: wave-delayed 15s ease-in-out infinite;
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    /* Enhanced Animations */
    @keyframes gradient {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .animate-gradient {
        background-size: 200% 200%;
        animation: gradient 8s ease infinite;
    }

    /* Add scroll behavior */
    .nav-scrolled {
        @apply bg-white/90 shadow-lg shadow-gray-900/5;
    }

    /* Updated/Added Mobile Styles */
    .mobile-dropdown-button {
        @apply flex items-center justify-between px-3 py-2 rounded-xl text-base font-medium text-gray-700 hover:text-violet-600 hover:bg-violet-50 transition-colors duration-200 w-full;
    }

    .mobile-sublink {
        @apply block px-3 py-2 rounded-xl text-sm font-medium text-gray-600 hover:text-violet-600 hover:bg-violet-50/50 transition-colors duration-200;
    }

    /* Add new styles */
    .nav-hidden {
        transform: translateY(-100%);
    }

    .nav-visible {
        transform: translateY(0);
    }

    /* Enhanced mobile menu animation */
    .mobile-menu {
        transition: max-height 0.3s ease-in-out;
        max-height: 0;
        overflow: hidden;
    }

    .mobile-menu.active {
        max-height: 400px;
    }
</style>

<script>
    const mobileMenuButton = document.querySelector(".mobile-menu-button");
    const mobileMenu = document.querySelector(".mobile-menu");
    const notificationDismiss = document.querySelector(".notification-dismiss");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
        mobileMenu?.classList.toggle("active");

        // Animate the menu icon
        const icon = mobileMenuButton.querySelector("svg");
        icon?.classList.toggle("rotate-90");
    });

    notificationDismiss?.addEventListener("click", () => {
        notificationDismiss.closest(".notification-bar")?.remove();
    });

    // Get the notification bar and dismiss button elements
    const notificationBar = document.getElementById("notification-bar");
    const dismissButton = document.getElementById("notification-dismiss");

    // Add click event listener to the dismiss button
    dismissButton?.addEventListener("click", () => {
        // Hide the notification bar with a fade-out effect
        if (notificationBar) {
            notificationBar.style.transition = "opacity 0.3s ease-out";
            notificationBar.style.opacity = "0";

            // Remove the element after the animation
            setTimeout(() => {
                notificationBar.style.display = "none";
            }, 300);
        }
    });

    // Replace existing scroll behavior with this enhanced version
    const nav = document.getElementById("main-nav");
    let lastScroll = 0;
    const scrollThreshold = 80;

    window.addEventListener("scroll", () => {
        const currentScroll = window.pageYOffset;

        if (currentScroll <= scrollThreshold) {
            nav?.classList.remove("nav-scrolled", "nav-hidden");
            return;
        }

        if (currentScroll > lastScroll) {
            // Scrolling down
            nav?.classList.add("nav-scrolled", "nav-hidden");
        } else {
            // Scrolling up
            nav?.classList.add("nav-scrolled");
            nav?.classList.remove("nav-hidden");
        }

        lastScroll = currentScroll;
    });

    // Add mobile dropdown functionality
    const mobileDropdownButtons = document.querySelectorAll(
        ".mobile-dropdown-button",
    );

    mobileDropdownButtons.forEach((button) => {
        button.addEventListener("click", () => {
            const content = button.nextElementSibling;
            const icon = button.querySelector("svg");

            content?.classList.toggle("hidden");
            icon?.classList.toggle("rotate-180");
        });
    });
</script>
